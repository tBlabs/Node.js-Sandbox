{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "test",
            "isBuildCommand": false,
            "isShellCommand": true,
            "command": "jasmine",
            "showOutput": "always"
        },
        {
            "taskName": "clean",
            "isBuildCommand": false,
            "isShellCommand": true,
            "command": "rmdir",
            "args": [
                "${workspaceRoot}\\bin",
                "/s",
                "/q"
            ],
            "showOutput": "always",
            "echoCommand": true
        },
        {
            "taskName": "build",
            "isBuildCommand": true,
            "isShellCommand": true,
            "command": "tsc",
            "args": [
                "-p",
                "."
            ],
            "showOutput": "always",
            "problemMatcher": "$tsc",
            "echoCommand": true
        },
        {
            "taskName": "test_task",
            "isShellCommand": true,
            "command": "echo",
            "args": [
                "hi there!"
            ],
            "showOutput": "always"
        }
    ]
}