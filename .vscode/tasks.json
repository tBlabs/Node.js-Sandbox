{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "clean",
            "isShellCommand": true,
            "command": "rm",
            "args": [
                "${workspaceRoot}/bin",
                "-rf",
                ""
            ],
            "showOutput": "always",
            "echoCommand": true
        },
        {
            "taskName": "build",
            "isBuildCommand": true,
            "isShellCommand": true,
            "command": "tsc",
            "args": [
                "-p",
                "."
            ],
            "showOutput": "always",
            "problemMatcher": "$tsc",
            "echoCommand": true
        },
        {
            "taskName": "test",
            "isTestCommand": true,
            "isShellCommand": true,
            "command": "jasmine",
            "args": [
                "--config=src/spec/support/jasmine.json"
            ],
            "showOutput": "always"
        },
        {
            "taskName": "sayhi",
            "isShellCommand": true,
            "command": "echo",
            "args": [
                "hi there!"
            ],
            "showOutput": "always"
        }     
    ]
}